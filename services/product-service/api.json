{
  "openapi": "3.0.2",
  "info": {
    "description": "Service to provide product and reviews data",
    "version": "1.0.0",
    "title": "CT-NodeJS-Task",
    "contact": {
      "email": "stozekrzysztof@gmail.com"
    }
  },
  "tags": [
    {
      "name": "products",
      "description": "Products api"
    },
    {
      "name": "reviews",
      "description": "Products reviews"
    }
  ],
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/product-service/products": {
      "get": {
        "tags": [
          "products"
        ],
        "summary": "List of products",
        "operationId": "listProducts",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductResponse"
                  }
                }
              }
            }
          }
        },
        "parameters": []
      },
      "post": {
        "tags": ["products"],
        "summary": "Create new product",
        "operationId": "createProduct",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          }
        },
        "parameters": []
      }
    },
    "/product-service/products/{id}": {
      "get": {
        "tags": [
          "products"
        ],
        "summary": "Representation of single product",
        "operationId": "getProduct",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404ErrorMessage"
                }
              }
            }
          },
          "415": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/415ErrorMessage"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ]
      },
      "patch": {
        "tags": [
          "products"
        ],
        "summary": "Update of single product",
        "operationId": "updateProduct",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404ErrorMessage"
                }
              }
            }
          },
          "415": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/415ErrorMessage"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ]
      },
      "delete": {
        "tags": [
          "products"
        ],
        "summary": "Deletion of single product",
        "operationId": "deleteProduct",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404ErrorMessage"
                }
              }
            }
          },
          "415": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/415ErrorMessage"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ]
      }
    },
    "/product-service/products/{id}/reviews": {
      "get": {
        "tags": [
          "products",
          "reviews"
        ],
        "summary": "Reviews of product",
        "operationId": "getProductReviews",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReviewResponse"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404ErrorMessage"
                }
              }
            }
          },
          "415": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/415ErrorMessage"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ]
      }
    },
    "/product-service/reviews": {
      "post": {
        "tags": ["reviews"],
        "summary": "Create new review",
        "operationId": "createReview",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReviewCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReviewResponse"
                }
              }
            }
          }
        },
        "parameters": []
      }
    },
    "/product-service/reviews/{id}": {
      "patch": {
        "tags": [
          "reviews"
        ],
        "summary": "Update of single review",
        "operationId": "updateReview",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReviewUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReviewResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404ErrorMessage"
                }
              }
            }
          },
          "415": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/415ErrorMessage"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ]
      },
      "delete": {
        "tags": [
          "reviews"
        ],
        "summary": "Deletion of single review",
        "operationId": "deleteReview",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404ErrorMessage"
                }
              }
            }
          },
          "415": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/415ErrorMessage"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ProductCreateRequest": {
        "type": "object",
        "required": [
          "name",
          "description",
          "price"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Product name",
            "example": "Shoes"
          },
          "description": {
            "type": "string",
            "description": "Product description",
            "example": "Very fancy shoes"
          },
          "price": {
            "type": "integer",
            "format": "int32",
            "description": "Product price",
            "example": 1
          }
        }
      },
      "ProductUpdateRequest": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Product name",
            "example": "Shoes"
          },
          "description": {
            "type": "string",
            "description": "Product description",
            "example": "Very fancy shoes"
          },
          "price": {
            "type": "integer",
            "format": "int32",
            "description": "Product price",
            "example": 1
          }
        }
      },
      "ProductResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Product price",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Product name",
            "example": "Shoes"
          },
          "description": {
            "type": "string",
            "description": "Product description",
            "example": "Very fancy shoes"
          },
          "price": {
            "type": "integer",
            "format": "int32",
            "description": "Product price",
            "example": 1
          },
          "averageRating": {
            "type": "integer",
            "format": "double",
            "description": "Product average rating",
            "example": 5.5
          }
        }
      },
      "ReviewCreateRequest": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "reviewText",
          "rating",
          "product"
        ],
        "additionalProperties": false,
        "properties": {
          "firstName": {
            "type": "string",
            "description": "Reviewer first name",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "description": "Reviewer last name",
            "example": "Doe"
          },
          "reviewText": {
            "type": "string",
            "description": "Review text",
            "example": "Very good product"
          },
          "rating": {
            "type": "integer",
            "format": "int32",
            "description": "Rating of product",
            "example": 4,
            "minimum": 1,
            "maximum": 5
          },
          "product": {
            "type": "integer",
            "format": "int32",
            "description": "Id of product",
            "example": 4
          }
        }
      },
      "ReviewUpdateRequest": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "firstName": {
            "type": "string",
            "description": "Reviewer first name",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "description": "Reviewer last name",
            "example": "Doe"
          },
          "reviewText": {
            "type": "string",
            "description": "Review text",
            "example": "Very good product"
          },
          "rating": {
            "type": "integer",
            "format": "int32",
            "description": "Rating of product",
            "example": 4,
            "minimum": 1,
            "maximum": 5
          }
        }
      },
      "ReviewResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Review ID",
            "example": 1
          },
          "firstName": {
            "type": "string",
            "description": "Reviewer first name",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "description": "Reviewer last name",
            "example": "Doe"
          },
          "reviewText": {
            "type": "string",
            "description": "Review text",
            "example": "Very good product"
          },
          "rating": {
            "type": "integer",
            "format": "int32",
            "description": "Rating of product",
            "example": 4
          }
        }
      },

      "404ErrorMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Not Found"
          }
        }
      },
      "415ErrorMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Unsupported Media Type"
          }
        }
      }
    },
    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "description": "Resource identifier",
        "required": true,
        "schema": {
          "type": "integer",
          "example": 1
        }
      }
    }
  }
}
